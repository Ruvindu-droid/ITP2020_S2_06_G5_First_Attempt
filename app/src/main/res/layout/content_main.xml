<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    >

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recycler_menu"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:scrollbars="vertical">-->

<!--    </androidx.recyclerview.widget.RecyclerView>-->

    <TextView
        android:id="@+id/catagory_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="190dp"
        android:background="@color/colorPrimary"
        android:text="@string/select_catagory"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linear1_catogery_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catagory_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ybg2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@id/catagory_name"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/chocolate_cateogry" />

        <ImageView
            android:id="@+id/t2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="190dp"
            android:src="@drawable/watches_category" />

    </LinearLayout>


    <TextView
        android:id="@+id/chocolate_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_catogery_layout"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="245dp"
        android:text="@string/catagory_name1"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/watch_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_catogery_layout"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="90dp"
        android:text="@string/catagory_name2"
        android:textColor="@android:color/black"/>


    >


    <LinearLayout
        android:id="@+id/linear2_catogery_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chocolate_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ybg2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@id/catagory_name"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/electronic_category" />

        <ImageView
            android:id="@+id/t4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="190dp"
            android:src="@drawable/kids_category" />

    </LinearLayout>


    <TextView
        android:id="@+id/electronic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2_catogery_layout"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="245dp"
        android:text="@string/catagory_name3"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/kids_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2_catogery_layout"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="90dp"
        android:text="@string/catagory_name4"
        android:textColor="@android:color/black"/>




</RelativeLayout>