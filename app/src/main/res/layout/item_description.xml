<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ybg2">


    <TextView
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

    </TextView>

    <ImageView
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/userprof" />

    <TextView
        android:id="@+id/chocolate_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="100dp"
        android:text="Classical Truffle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="italic"></TextView>

    <ImageView
        android:id="@+id/ch1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/chocolate_header"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/chp1" />

    <TextView
        android:id="@+id/ch1_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ch1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="100dp"
        android:text="Classical cholocolate truffle comes as a 12 slots.Price:RS2000"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"></TextView>

    <NumberPicker
        android:id="@+id/numpick"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/ch1_description"
        android:layout_marginLeft="180dp">

    </NumberPicker>

    <Button
        android:id="@+id/add_cart"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_below="@id/numpick"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-2dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="10sp">

    </Button>

    <Button
        android:id="@+id/view_cart"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_below="@id/add_cart"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-2dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Go to Cart"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="10sp">

    </Button>


</RelativeLayout>