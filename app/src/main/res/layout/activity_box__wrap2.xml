<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Box_WrapActivity2">


    <TextView
        android:id="@+id/slogan_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="cursive"
        android:text="@string/topic3"
        android:textAlignment="center"
        android:textColor="#7A0B33"
        android:textSize="26sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linear1_box_wrap"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_box"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity=""
        android:layout_marginTop="45dp">



        <ImageView
            android:id="@+id/pink"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/f"
            />
        <ImageView
            android:id="@+id/black"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/f1"
            />
        <ImageView
            android:id="@+id/dark_blue"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/f4"
            />
        <ImageView
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/f5"
            />


    </LinearLayout>

    <Button
        android:id="@+id/Box3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttons"
        android:fontFamily="cursive"
        android:padding="20dp"
        android:text="@string/button5"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Box5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttons"
        android:fontFamily="cursive"
        android:padding="20dp"
        android:text="@string/button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/Box4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttons"
        android:fontFamily="cursive"
        android:padding="20dp"
        android:text="@string/button6"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>