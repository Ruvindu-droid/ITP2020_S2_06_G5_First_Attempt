<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ybg2">


    <TextView
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"></TextView>

    <ImageView
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/userprof" />

    <TextView
        android:id="@+id/cart_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="100dp"
        android:text="@string/cart_header"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="italic"></TextView>

    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/cart_header"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/cart" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/shopping_cart"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/holo_orange_light">

        <TextView
            android:id="@+id/price_desc"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Item 1:Chocolate truffle Rs2000">


        </TextView>

        <Button
            android:id="@+id/remove"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="350dp"
            android:layout_marginBottom="110dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Remove"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="8sp">

        </Button>

        <Button
            android:id="@+id/change"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="350dp"
            android:layout_marginBottom="110dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Change item"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="8sp">

        </Button>


        >
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/cardview_1"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#FFC107">

        <TextView
            android:id="@+id/price_desc2"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Item 2:Chocolate Delight Rs2500">


        </TextView>

        <Button
            android:id="@+id/remove2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="350dp"
            android:layout_marginBottom="110dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Remove"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="8sp">

        </Button>

        <Button
            android:id="@+id/change2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="350dp"
            android:layout_marginBottom="110dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/change_btn"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="8sp">

        </Button>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@id/cardview_2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="Total Amount = RS 4500">


    </TextView>


    <Button
        android:id="@+id/gotowrap"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/totalprice"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="350dp"
        android:layout_marginBottom="110dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/wrapping_items_btn"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="8sp">

    </Button>


    <Button
        android:id="@+id/gotoshopping"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/totalprice"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="350dp"
        android:layout_marginBottom="110dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/backto_shopping_btn"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="8sp">

    </Button>


</RelativeLayout>