<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bag_WrapActivity2">


    <TextView
        android:id="@+id/slogan_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="cursive"
        android:text="@string/topic4"
        android:textAlignment="center"
        android:textColor="#7A0B33"
        android:textSize="26sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linear1_box_wrap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_box"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity=""
        android:layout_marginTop="45dp">



        <ImageView
            android:id="@+id/bag1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/i"
            />
        <ImageView
            android:id="@+id/bag2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/i1"
            />
        <ImageView
            android:id="@+id/bag3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/i2"
            />
        <ImageView
            android:id="@+id/bag4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/j"
            />


    </LinearLayout>

    <Button
        android:id="@+id/Box5"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttons"
        android:fontFamily="cursive"
        android:padding="20dp"
        android:text="@string/button7"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Box9"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttons"
        android:fontFamily="cursive"
        android:padding="20dp"
        android:text="@string/r1"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/Box6"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttons"
        android:fontFamily="cursive"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="@string/button8" />

</RelativeLayout>